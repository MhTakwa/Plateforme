{% extends 'base.html.twig' %}

{% block title %}Soumission index{% endblock %}
{%block stylesheets%}
<style>
    .course_info{
        width:500px;
        margin-left: 30%;
        margin-bottom: 5%;
    }
    #selected{
        color: green;
    }
    table{
        
        width: 1000px !important;
   
    }

</style>
{%endblock%}
{% block body %}
         	<!-- Home -->

             <div class="home">
                <div class="breadcrumbs_container">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="breadcrumbs">
                                    <ul>
                                        <li><a href="index.html">Home</a></li>
                                        <li><a href="{{path("dashboard")}}">Espace Personnel</a></li>
                                        <li><a href="{{path('cours_show',{'id':activite.section.cours.id})}}">{{activite.section.cours.libelle}}</a></li>
                                        <li> <a href="{{path('activite_show', {'id': activite.id})}}">{{activite.Nom}}</a> </li>
                                        <li>Espace soumission</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>			
            </div> 
        
            <div class="course_info d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-start col-md-6">
      
      
                <!-- Course Info Item -->
                <div class="course_info_item" >
                    <div class="course_info_title" {%if activite.phase==0%}  id="selected"   {%endif%}>Phase soumission </div>
                    <div class="course_info_text"><a href="#"></a>
                        {{soumissions|length}} Soumissions
                    </div>
                </div>

                  <!-- Course Info Item -->
                  <div class="course_info_item" >
                    <div class="course_info_title" {%if activite.phase==1%}  id="selected"   {%endif%}>Phase evaluation </div>
                    <div class="course_info_text"><a href="{{path('activiteEval',{"id":activite.id})}}">Changer la phase</a></div>
                </div>
                

            </div>
            <div class="container">
                <div class="row">
                  <div class="col-xs-12 ">
                    <div class="table-responsive" data-pattern="priority-columns">
                      <table class="table table-bordered table-hover">
                       
                     
                        <tbody>
                           {%for soumission in soumissions%}
                            <tr>
                                <th colspan="3">{{soumission.apprenant.nom ~ " " ~ soumission.apprenant.prenom}}</th>
                                <td colspan="1">{{ soumission.modification|date('Y-m-d H:i:s') }}</td>
                                <td><a href="{{path('soumission_show',{'id':soumission.id})}}" target="_blanc">{{soumission.titre}}</a></td>
                            </tr>
                           {%endfor%}
                      
                        </tbody>
                        
                      </table>
                      <br> <br> <br> <br> <br> <br> <br> <br> <br>
                    </div><!--end of .table-responsive-->
                  </div>
               
                 
                </div>
              </div>
          

{% endblock %}
