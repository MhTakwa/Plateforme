{% extends 'base.html.twig' %}

{% block title %}Activite{% endblock %}

{% block body %}
    <h1>Activite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.Nom }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ activite.dateCreation ? activite.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DebutSoumission</th>
                <td>{{ activite.debutSoumission ? activite.debutSoumission|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FinSoumission</th>
                <td>{{ activite.finSoumission ? activite.finSoumission|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PeriodeGrace</th>
                <td>{{ activite.periodeGrace }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activite_index') }}">back to list</a>

    <a href="{{ path('activite_edit', {'id': activite.id}) }}">edit</a>

    {{ include('activite/_delete_form.html.twig') }}
{% endblock %}
