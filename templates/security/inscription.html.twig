{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<h1> Inscription sur le site!</h1>

{{ form_start(form)}}
{{ form_row(form.nom, {'attr':{'placeholder':'Nom d\'utilisateur ...'}})}}
{{ form_row(form.prenom, {'attr':{'placeholder':'Prenom d\'utilisateur ...'}})}}
{{ form_row(form.email, {'attr':{'placeholder':'Adresse email ...'}})}}
{{ form_row(form.password, {'attr':{'placeholder':'Mot de passe ...'}})}}

<button type="submit" class="btn btn-success"> Inscription!</button>

{{ form_end(form)}}

{% endblock %}