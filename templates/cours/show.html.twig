                                                                                        <a href="{{path('ressource_edit',{'id':ressource.id})}}">
                                                                                            <img src="{{asset('images/modifier.jpg')}}" alt="">
                                                                                        </a>
                                                                                    </td>
                                                                                    <td>
                                                                                        {{ include('ressource/_delete_form.html.twig') }}
                                                                                    </td>
                                                                                {%else%}
                                                                                    <td>
                                                                                        <a href="{{path('activite_edit',{'id':ressource.id})}}">
                                                                                            <img src="{{asset('images/modifier.jpg')}}" alt="">
                                                                                        </a>
                                                                                    </td>
                                                                                    <td>
                                                                                        {{ include('activite/_delete_form.html.twig') }}
                                                                                    </td>
                                                                                    {%endif%}
                                                                            </tr>
                                                                            
                                                                            </table>
                                                                       
                                                                    <div class="dropdown_item_text">
                                                                        
                                                                            {{ressource.Contenu |raw}}
                                                                     
                                                                    </div>
                                                                </div>
                                                            </li>
                                                            {%endfor%}
                                                            <div class="row">
                                                                <div class="courses_button trans_200 col-md-4"><a  id="add" href="{{path('ressource_new',{'section':section.id})}}">Ajouter une ressource</a></div>
