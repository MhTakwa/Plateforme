                                                                                <td style="width: 900px;">
                                                                                    <a href="{{ asset('uploads/ressources/' ~ section.Id ~'/' ~ ressource.Document) }}">{{ressource.Nom}}</a> 
                                                                                </td>
                                                                                {%if ressource.className=="ressource"%}                                                                                
