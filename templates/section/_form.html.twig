<div  class="col-md-8 contact_form">
{{ form_start(form, { 'attr': {'class': 'comment_form'}}) }}
   <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
<div>
    <div class="raw">
        <div class="form_title">
            {{ form_label(form.libelle, 'Libelle') }}
        </div>
        {{ form_widget(form.libelle, {'attr': {'class': 'comment_input'}}) }}
    </div>
</div>

<button type="submit" class="comment_button trans_200 ajouter">{{ button_label|default('Ajouter') }}</button>


{{ form_end(form) }}
</div>