{% block javascripts %}
<script>

    $(document).ready(function(){
         $('#tuteur_image').removeAttr("required");
        $('.user_image').on('click',function(){
          
        $('#tuteur_image').click();
        });
        $('#tuteur_image').on('change',function(){
            var reader = new FileReader();
        
            reader.onload = function (e) { 
                
                $('.user_image').attr('src', e.target.result);
                $('.user_image').css('background-color','transparent');
                $('.user_image').css('width','fit-content');
            }
            reader.readAsDataURL($('#tuteur_image').prop('files')[0]);
        });
    });
        
       
       
     
</script>
{% endblock %}